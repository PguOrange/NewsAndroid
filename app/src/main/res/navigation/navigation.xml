<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/topHeadlinesFragment">

    <fragment
        android:id="@+id/topHeadlinesFragment"
        android:name="com.example.newsandroid.ui.topheadlines.TopHeadlinesFragment"
        tools:layout="@layout/top_headlines_fragment">
        <action
            android:id="@+id/action_topHeadlinesFragment_to_detailNewsFragment"
            app:destination="@id/detailNewsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/everythingFragment"
        android:name="com.example.newsandroid.ui.everything.EverythingFragment"
        tools:layout="@layout/everything_fragment" >
        <action
            android:id="@+id/action_everythingFragment_to_detailNewsFragment"
            app:destination="@id/detailNewsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/detailNewsFragment"
        android:name="com.example.newsandroid.ui.detail.DetailNewsFragment"
        tools:layout="@layout/detail_news_fragment" >
        <argument
            android:name="news"
            app:argType="com.example.newsandroid.domain.NewsProperty" />
        <argument
            android:name="position"
            app:argType="integer" />
    </fragment>
</navigation>